{
  "name": "jsgrok-ql",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-grammar && npm run build-bundle",
    "build-grammar": "nearleyc grammar/jsgrok-ql.ne -o src/grammar.js",
    "build-grammar:watch": "nodemon -e ne --watch grammar --exec \"nearleyc grammar/jsgrok-ql.ne -o src/grammar.js\"",
    "build-bundle": "webpack",
    "build-bundle:watch": "webpack -w --progress",
    "test": "mocha 'src/**/*.test.js' 'grammar/__tests__/**/*.test.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amireh/jsgrok.git"
  },
  "dependencies": {
    "nearley": "2.10.2"
  },
  "devDependencies": {
    "chai": "4.1.0",
    "glob": "^7.1.2",
    "mocha": "3.4.2",
    "nodemon": "1.11.0",
    "webpack": "^3.4.1"
  }
}
